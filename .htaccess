# ============================================================================
# TeleCareZone .htaccess Configuration for Hostinger Shared Hosting
# ============================================================================
# Domain: www.mykitchenfarm.com
# ============================================================================

# Enable URL Rewriting
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # ========================================================================
    # SECURITY RULES
    # ========================================================================
    
    # Block access to hidden files (except .well-known)
    RewriteRule ^\.(?!well-known/) - [F]
    
    # Block access to sensitive files
    RewriteRule ^composer\.(json|lock)$ - [F,L]
    RewriteRule ^package\.json$ - [F,L]
    RewriteRule ^yarn\.lock$ - [F,L]
    
    # Block access to sensitive directories
    RewriteRule ^config/ - [F,L]
    RewriteRule ^backend/ - [F,L]
    RewriteRule ^frontend/ - [F,L]
    RewriteRule ^tests/ - [F,L]
    RewriteRule ^memory/ - [F,L]
    RewriteRule ^\.git/ - [F,L]
    
    # ========================================================================
    # API ROUTING - Must come FIRST
    # ========================================================================
    
    # Route /api/* requests to api_index.php
    RewriteCond %{REQUEST_URI} ^/api/ [NC]
    RewriteRule ^api/(.*)$ api_index.php [QSA,L]
    
    # ========================================================================
    # STATIC FILES - Serve directly if they exist
    # ========================================================================
    
    # If the request is for an existing file, serve it directly
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteCond %{REQUEST_URI} \.(html|css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot|json|webp|mp4|webm)$ [NC]
    RewriteRule ^ - [L]
    
    # ========================================================================
    # REACT APP - All other requests go to index.html
    # ========================================================================
    
    # For all other requests (frontend routes), serve index.html
    RewriteCond %{REQUEST_URI} !^/api/ [NC]
    RewriteCond %{REQUEST_URI} !^/uploads/ [NC]
    RewriteRule ^.*$ index.html [L]
    
</IfModule>

# ============================================================================
# DIRECTORY INDEX - Force index.html as primary
# ============================================================================
DirectoryIndex index.html

# ============================================================================
# PHP SETTINGS (Hostinger compatible)
# ============================================================================
<IfModule mod_php.c>
    php_value upload_max_filesize 50M
    php_value post_max_size 50M
    php_value memory_limit 256M
    php_value max_execution_time 300
</IfModule>

# ============================================================================
# MIME TYPES
# ============================================================================
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/javascript .js
    AddType application/json .json
    AddType image/webp .webp
    AddType image/svg+xml .svg
    AddType font/woff2 .woff2
</IfModule>

# ============================================================================
# COMPRESSION
# ============================================================================
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# ============================================================================
# CACHING
# ============================================================================
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType font/woff2 "access plus 1 year"
</IfModule>

# ============================================================================
# SECURITY
# ============================================================================
Options -Indexes

<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# ============================================================================
# END OF CONFIGURATION
# ============================================================================
